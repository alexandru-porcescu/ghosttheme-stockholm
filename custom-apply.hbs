{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<!-- start site's main content area -->
<script src="{{asset "/dist/pages.js"}}"></script>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<section class="content-wrap page-apply">
  <div class="container">
    {{#post}}
      <!-- start main post area -->
      <div class=" main-content">
        <!-- start post -->
        <article class="{{page-class}} page">
          <h1>{{{title}}}</h1>
          {{#if feature_image}}
            <div class="featured-media">
              <img src="{{img_url feature_image size="l"}}" alt="{{{title}}}" data-rjs="3">
            </div>
          {{/if}}
          <div class="page-content">
            {{content}}
            <div class="form" class="needs-validation">
              <form class="needs-validation" id="msform" accept-charset="UTF-8" action="https://getform.io/f/ce75696d-0ee2-4475-8a8f-a26da6267917" method="POST">
                <fieldset class="active">
                  <h2>The Boring Stuff</h2>
                  <p>Tell us about yourself by letting your browser auto-fill these obligatory fields.</p>
                  <div class="split-fields">
                    <div class="input-field-group">
                      <label for="application_name">Full Name (required)</label>
                      <input id="application_name"  class="form-control" maxlength="20" name="application_submission[name]" type="text" required="">
                    </div>
                    <div class="input-field-group">
                      <label for="application_email"> Email (required) </label>
                      <input id="application_email"  class="form-control" maxlength="30" name="application_submission[email]" type="email" required="">
                    </div>
                    <div class="input-field-group">
                      <label for="application_username"> Nickname /Call Sign/ Gangsta Rap Persona </label>
                      <input id="application_username"  class="form-control" maxlength="30" name="application_submission[username]" type="text">
                    </div>
                    <div class="input-field-group">
                      <label for="application__expertise"> What are your areas of expertise? (required) </label>
                      <input id="application__expertise"  class="form-control" maxlength="100" name="application_submission[expertise]" type="text" required="">
                    </div>
                  </div>
                </fieldset>

                <fieldset>
                  <h2>The Juicy Stuff</h2>
                  <p id="application_description">
                    Before we can let you into our temple, we need to make sure you're literate first. Please provide a writing sample where you've explained something technical, perferrably in the vein of Data Science and Engineering.
                  </p>
                  <div class="input-field-group">
                    <label for="application_sample"> Writing sample (required) </label>
                    <textarea  class="form-control" aria-describedby="application_sample" id="application_submission_sample" name="application_submission[sample]" required=""></textarea>
                  </div>
                </fieldset>

                <fieldset>
                  <h2>The Blow-Our-Fucking-Minds Stuff</h2>
                  <p id="application_notes">
                    If you'd like to provide any of the information below to sweeten the deal, have it!
                  </p>
                  <div class="split-fields">
                    <div class="input-field-group">
                      <label for="application_website">Website</label>
                      <input  class="form-control" id="application_website" maxlength="40" name="application_submission[website]" type="text">
                    </div>
                    <div class="input-field-group">
                      <label for="application_blog">Blog</label>
                      <input  class="form-control" id="application_blog" maxlength="40" name="application_submission[blog]" type="text">
                    </div>
                    <div class="input-field-group">
                      <label for="application_github">Github</label>
                      <input  class="form-control" id="application_github" maxlength="40" name="application_submission[github]" type="text">
                    </div>
                    <div class="input-field-group">
                      <label for="application_twitter">Twitter</label>
                      <input  class="form-control" id="application_twitter" maxlength="40" name="application_submission[twitter]" type="text">
                    </div>
                    <div class="input-field-group">
                      <label for="application_myspace">MySpace</label>
                      <input  class="form-control" id="application_myspace" maxlength="40" name="application_submission[myspace]" type="text">
                    </div>
                    <div class="input-field-group">
                      <label for="application_ssn">Social Security Number</label>
                      <input  class="form-control" id="application_ssn" maxlength="12" name="application_submission[ssn]" type="text">
                    </div>
                  </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </fieldset>
              </form>
            </div>
          </div>
      </div>
  </div>
  </article>
  <!-- end main post area -->
</section>
