<article class="post-preview">
  {{#if featured}}
    <div class="featured">
      <i class="far fa-star"></i>
    </div>
  {{/if}}

  {{#if feature_image}}
    <a href="{{url}}" class="featured-media">
      <picture>
        <source media="(min-width: 1200px)" srcset="{{img_url feature_image size="extralarge"}} 1x, {{img_url feature_image size="large_retina"}} 2x">
        <source media="(min-width: 800px)" srcset="{{img_url feature_image size="large"}} 1x, {{img_url feature_image size="large_retina"}} 2x">
        <source media="(min-width: 600px)" srcset="{{img_url feature_image size="medium"}} 1x, {{img_url feature_image size="medium_retina"}} 2x">
        <img alt="{{title}}" class="lazy" src="{{img_url feature_image}}">
    </picture>
    </a>
  {{/if}}

  <div class="content">
    <div class="post-head">
      <h2 class="post-title"><a href="{{url}}" class="title-link">{{{title}}}</a></h2>
        <h3 class="post-excerpt">{{excerpt words="60"}}</h3>
    </div>

    <div class="post-permalink">
      <div class="meta">
        {{#primary_tag}}
            <a href="{{url}}" class="tags meta-item {{slug}}"><i class="fas fa-tags"></i> <span>{{name}}</span></a>
        {{/primary_tag}}
        {{#primary_author}}
        {{primary_author.bio}}
        {{#unless profile_image}}
            <a href="{{url}}" class="meta-item author"><i class="fal fa-user" style="width:18px; height:18px; display:inline-block; margin-right:10px;"></i><span>{{name}}</span></a>
            <a href="{{url}}" class="meta-item author-mobile"><i class="fal fa-user" style="width:18px; height:18px; display:inline-block; margin-right:10px;"></i><div class="info"><span class="mobile-name">{{slug}}</span><span class="mobile-date">{{date format="MMM DD"}}</span></div></a>
        {{/unless}}
          {{#if profile_image}}
            <a href="{{url}}" class="meta-item author"><img src="{{img_url profile_image}}" alt="{{name}} avatar" class="avi" data-rjs="2" size="extrasmall"><span>{{name}}</span></a>
            <a href="{{url}}" class="author-mobile"><img src="{{img_url profile_image}}" alt="{{name}} avatar" class="avi" data-rjs="2" size="extrasmall"><div class="info"><span class="mobile-name">{{slug}}</span><span class="mobile-date">{{date format="MMM DD"}}</span></div></a>
          {{/if}}
        {{/primary_author}}
        <span class="date meta-item"><i class="fal fa-calendar"></i> <span>{{date format="MMM DD"}}</span></span>
      </div>
      <a href="{{url}}" class="btn btn-default">{{t "Continue Reading"}}</a>
    </div>
  </div>
</article>
