{{#author}}
	<div class="cover author-cover">
			{{#if profile_image}}
				<img src="{{profile_image}}" alt="{{name}}'s' avatar" class="avatar">
			{{/if}}
		<h3 class="author-name">
			{{name}}
		</h3>
		<div class="meta-info">
			<span class="post-count"><i class="fal fa-pencil"></i>{{#get "posts" limit="all" filter="author:{{slug}}" include="count.posts"}}{{plural count.posts empty=(t "0 Posts") singular=(t "% Post") plural=(t "% Posts")}}{{/get}}</span>
			{{#if location}}
				<span class="location"><i class="fal fa-map-marker-alt"></i>{{location}}</span>
			{{/if}}
			{{#if website}}
				<span class="website"><a href="{{website}}" target="_BLANK"><i class="fal fa-globe"></i> {{t "Website"}}</a></span>
			{{/if}}
			{{#if twitter}}
				<span class="twitter"><a href="{{twitter_url}}" target="_BLANK"><i class="fab fa-twitter"></i> {{twitter}}</a></span>
			{{/if}}
			{{#if facebook}}
				<span class="facebook"><a href="{{facebook_url}}" target="_BLANK"><i class="fa fa-facebook"></i></a></span>
			{{/if}}
		</div>
		{{#if bio}}
			<div class="bio">{{{bio}}}</div>
		{{/if}}
	</div>

