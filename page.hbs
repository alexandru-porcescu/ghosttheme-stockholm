{{!< default}}

<div class="page-container sidebar-layout">
	<div class="main-content">
		{{#post}}
			<main class="page">
				{{#if feature_image}}
					<div class="post-image">
						<picture>
							<source alt="{{title}}" loading="lazy" class="lazy" media="(min-width: 1200px)" srcset="{{img_url feature_image size="large"}} 1x, {{img_url feature_image}} 2x">
							<img alt="{{title}}" loading="lazy" class="lazy" src="{{img_url feature_image}}">
						</picture>
					</div>
				{{/if}}
				<div class="page-head">
					<h1 class="page-title">{{{title}}}</h1>
					<h4>{{excerpt}}</h4>
				</div>
				<div class="post-content">
					{{content}}
				</div>
			</main>
		{{/post}}
	</div>
	{{> sidebar}}
</div>
