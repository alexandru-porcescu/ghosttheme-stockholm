<script>
  $(document).ready(function() {
    function populatePython(pythons, status) {
      $('#python-table thead').append('<tr><th>issuetype_icon</th><th>summary</th><th>description</th><th>issuetype</th></tr>');
      for (var i = 0; i < pythons.length; i++) {
        $('#python-table tbody').append('<tr> \n ' +
          '<td><img src="' + pythons[i].issuetype_icon + '"></td> \n' +
          '<td>' + pythons[i].summary + '</td> \n' +
          '<td>' + pythons[i].description + '</td> \n' +
          '<td>' + pythons[i].isuetype + '</td> \n' +
          '</tr>');
      }
    }


    function python() {
      $.ajax({
        method: "GET",
        url: "https://apisentris.com/api/v1/jira_python?issuetype=eq.Python",
        headers: {
          client_id: "115000",
          access_token: "qWLp79NWuDtVxom5v6_h_g"
        },
        contentType: 'application/json'
      }).done(function(results) {
        populatePython(results, 'python-table');
      });
    }

    python();
  });
</script>
